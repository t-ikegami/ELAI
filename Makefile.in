prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
includedir = @includedir@
libdir = @libdir@

SUBDIRS	= Misc swig

.PHONY: all clean distclean install uninstall

all:
	install -d $(bindir) $(includedir) $(libdir)
	for i in $(SUBDIRS); do (cd $$i; $(MAKE) all) || exit 1; done

clean install uninstall:
	for i in $(SUBDIRS); do (cd $$i; $(MAKE) $@) || exit 1; done

distclean: clean
	rm -rf autom4te.cache autoscan.log config.log config.status configure.lineno
	rm -f Makefile
	for i in $(SUBDIRS); do (cd $$i; $(MAKE) distclean) || exit 1; done
